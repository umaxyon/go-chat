scalar Time

type Message {
  id: String!
  user: String!
  createdAt: Time!
  text: String!
}

type User {
  user: String!
}

type SubscriptionResponse {
  message: Message,
  user: User,
}

type Mutation {
  postMessage(user: String!, text: String!): Message!
  joinUser(user: String!): User!
}

type Query {
  messages: [Message!]!
  users: [User!]!
}

type Subscription {
  subscribe(user: String!): SubscriptionResponse!
}